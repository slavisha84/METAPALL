<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_calendar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".BMRActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="@drawable/gradbck"></LinearLayout>

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="155dp"
        android:layout_height="74dp"
        android:layout_below="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_marginTop="278dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp">

        <RadioButton
            android:id="@+id/training"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Training" />

        <RadioButton
            android:id="@+id/competition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Competition" />


    </RadioGroup>

    <TextView
        android:id="@+id/textView"
        android:text="Hello Champion"
        android:textSize="30dp"
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp" />


    <Spinner
        android:id="@+id/spinnerGender"
        android:layout_width="161dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="29dp"
        android:layout_marginRight="29dp"
        android:ems="10"
        android:entries="@array/GenderChoice"
        android:gravity="center_horizontal" />

    <EditText
        android:id="@+id/height"
        android:layout_width="155dp"
        android:layout_height="33dp"
        android:layout_below="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="34dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="Enter Height"
        android:importantForAutofill="no"
        android:inputType="numberDecimal"
        android:textSize="12dp" />

    <EditText
        android:id="@+id/age"
        android:layout_width="155dp"
        android:layout_height="34dp"
        android:layout_below="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_marginTop="145dp"
        android:layout_marginEnd="34dp"
        android:layout_marginRight="34dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="Enter Age"
        android:inputType="number"
        android:textSize="12dp" />

    <Spinner
        android:id="@+id/spinnerActivity"
        android:layout_width="161dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_marginTop="210dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:ems="10"
        android:entries="@array/Activities"
        android:gravity="center_horizontal" />

    <EditText
        android:id="@+id/weight"
        android:layout_width="155dp"
        android:layout_height="34dp"
        android:layout_below="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="34dp"
        android:layout_marginRight="34dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="Enter Weight"
        android:inputType="number"
        android:textSize="12dp" />


    <EditText
        android:id="@+id/duration"
        android:layout_width="155dp"
        android:layout_height="33dp"
        android:layout_below="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_marginTop="355dp"
        android:layout_marginEnd="33dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="Enter Training Hours"
        android:importantForAutofill="no"
        android:inputType="numberDecimal"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/PROResults1"
        android:layout_width="164dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_marginTop="457dp"
        android:layout_marginRight="144dp"
        android:text="PRO1:"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/PROResults2"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_marginTop="457dp"
        android:layout_marginRight="105dp"
        android:text="PRO2:"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/PROResults3"
        android:layout_width="164dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_marginTop="457dp"
        android:layout_marginRight="-65dp"
        android:text="PRO3:"
        android:textSize="15dp" />

    <Button
        android:id="@+id/calc"
        android:layout_width="115dp"
        android:layout_height="29dp"
        android:layout_below="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_marginTop="390dp"
        android:layout_marginEnd="51dp"
        android:layout_marginRight="51dp"
        android:background="@drawable/buttonradius"
        android:backgroundTint="#FFFFFF"
        android:onClick="CalculateBMR"
        android:text="@string/CalculateBMI" />

    <TextView
        android:id="@+id/TDEEResults"
        android:layout_width="164dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_marginTop="413dp"
        android:layout_marginRight="26dp"
        android:text="TDEE:"
        android:textSize="15dp"
        android:visibility="invisible" />


    <TextView
        android:id="@+id/BMRResults"
        android:layout_width="164dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_marginTop="410dp"
        android:layout_marginRight="32dp"
        android:text="BMR:"
        android:textSize="15dp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/MinCHOResults"
        android:layout_width="164dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_marginTop="438dp"
        android:layout_marginRight="119dp"
        android:text="Min CHO:"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/MaxCHOResults"
        android:layout_width="164dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_marginTop="435dp"
        android:layout_marginRight="-61dp"
        android:text="Max CHO:"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/H2OResults"
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_marginTop="237dp"
        android:layout_marginRight="32dp"
        android:text="H2O:"
        android:textSize="15dp"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/Seasons"
        android:layout_width="74dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_marginTop="253dp"
        android:layout_marginRight="76dp"
        android:text="SEASON:"
        android:textSize="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="161dp"
        android:layout_below="@+id/textView"
        android:layout_marginTop="479dp"
        android:background="@drawable/botwa">

        <Button
            android:id="@+id/btnAddData"
            android:layout_width="115dp"
            android:layout_height="29dp"
            android:layout_marginTop="449dp"
            android:layout_marginEnd="52dp"
            android:layout_marginRight="52dp"
            android:background="@drawable/buttonradius"
            android:backgroundTint="#FFFFFF"
            android:text="Save Data"
            android:visibility="invisible" />

        <Button
            android:id="@+id/gotodash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CONFIRM" />
        <Button
            android:id="@+id/gotowater"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="h2o" />

    </LinearLayout>


</RelativeLayout>

