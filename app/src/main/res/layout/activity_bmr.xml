<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_calendar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".BMRActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/gradbck">
    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:text="BMR"
        android:textSize="30dp"
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp" />


    <EditText
        android:id="@+id/height"
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_marginTop="118dp"
        android:layout_marginEnd="-46dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="Enter Height"
        android:importantForAutofill="no"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/weight"
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_marginTop="178dp"
        android:layout_marginEnd="-45dp"
        android:layout_marginRight="-45dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="Enter Weight"
        android:inputType="number" />

    <EditText
        android:id="@+id/age"
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_marginTop="237dp"
        android:layout_marginEnd="-44dp"
        android:layout_marginRight="-44dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="Enter Age"
        android:inputType="number" />

    <Spinner
        android:id="@+id/spinnerActivity"
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_marginTop="364dp"
        android:layout_marginEnd="-75dp"
        android:layout_marginRight="-75dp"
        android:ems="10"
        android:entries="@array/Activities"
        android:gravity="center_horizontal" />

    <Spinner
        android:id="@+id/spinnerGender"
        android:layout_width="186dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_marginTop="304dp"
        android:layout_marginEnd="-75dp"
        android:layout_marginRight="-75dp"
        android:ems="10"
        android:entries="@array/GenderChoice"
        android:gravity="center_horizontal" />

    <EditText
        android:id="@+id/sex"
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_marginTop="326dp"
        android:layout_marginEnd="-54dp"
        android:layout_marginRight="-54dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="Enter Sex"
        android:visibility="invisible"
        android:inputType="text" />

    <EditText
        android:id="@+id/ActvCh"
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_marginTop="371dp"
        android:layout_marginEnd="-58dp"
        android:layout_marginRight="-58dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="Enter Sex"
        android:inputType="text"
        android:visibility="invisible" />

    <Button
        android:id="@+id/calc"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_marginTop="402dp"
        android:layout_marginEnd="-27dp"
        android:layout_marginRight="-27dp"
        android:background="@drawable/buttonradius"
        android:backgroundTint="#FFFFFF"
        android:onClick="CalculateBMR"
        android:text="@string/CalculateBMI" />

    <TextView
        android:id="@+id/result2"
        android:layout_width="164dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_marginTop="482dp"
        android:layout_marginRight="-51dp"
        android:text="YOUR DTEE IS:"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/result1"
        android:layout_width="164dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_marginTop="458dp"
        android:layout_marginRight="-51dp"
        android:text="YOUR BMR IS:"
        android:textSize="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/textView"
        android:layout_marginTop="609dp"
        android:background="@drawable/botwa">

    </LinearLayout>


</RelativeLayout>