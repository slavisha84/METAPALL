<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_calendar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".B">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/gradbck">
    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:text="BMI"
        android:textSize="30dp"
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp" />


    <EditText
        android:id="@+id/height"
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_marginTop="182dp"
        android:layout_marginEnd="-52dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="Enter Height"
        android:importantForAutofill="no"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/weight"
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_marginTop="242dp"
        android:layout_marginEnd="-51dp"
        android:layout_marginRight="-51dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="Enter Weight"
        android:inputType="number" />

    <EditText
        android:id="@+id/age"
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_marginTop="301dp"
        android:layout_marginEnd="-50dp"
        android:layout_marginRight="-50dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="Enter Age"
        android:inputType="number" />

    <EditText
        android:id="@+id/sex"
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_marginTop="360dp"
        android:layout_marginEnd="-53dp"
        android:layout_marginRight="-53dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="Enter Sex"
        android:inputType="number" />

    <Button
        android:id="@+id/calc"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_marginTop="429dp"
        android:layout_marginEnd="-34dp"
        android:layout_marginRight="-34dp"
        android:background="@drawable/buttonradius"
        android:backgroundTint="#FFFFFF"
        android:onClick="CalculateBMI"
        android:text="@string/CalculateBMI" />

    <TextView
        android:id="@+id/result"
        android:layout_width="164dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_marginTop="485dp"
        android:layout_marginRight="-58dp"
        android:text="YOUR BMI IS:"
        android:textSize="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/textView"
        android:layout_marginTop="609dp"
        android:background="@drawable/botwa">

    </LinearLayout>


</RelativeLayout>